<h1 class="text-center">Issues</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.description %></td>
        <td><%= issue.department.name %></td>
        <td><%= link_to 'Show', web_issue_path(issue) %></td>
        <td><%= link_to 'Edit', edit_web_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', web_issue_path(issue), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_web_issue_path %>
