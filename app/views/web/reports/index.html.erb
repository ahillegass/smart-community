<h1 class="text-center">Reports</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Issue</th>
      <th>Description</th>
      <th>User</th>
      <th>Picture Link</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Date Resolved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.issue.description %></td>
        <td><%= report.description %></td>
        <td><%= report.user.email %></td>
        <td><%= report.picture_link %></td>
        <td><%= report.latitude %></td>
        <td><%= report.longitude %></td>
        <td><%= report.date_resolved %></td>
        <td><%= link_to 'Show', web_report_path(report) %></td>
        <td><%= link_to 'Edit', edit_web_report_path(report) %></td>
        <td><%= link_to 'Destroy', web_report_path(report), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Report', new_web_report_path %>
